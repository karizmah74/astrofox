{
  "name": "Astrofox",
  "version": "1.0.0-beta.1",
  "main": "app/main.js",
  "productName": "Astrofox",
  "description": "Astrofox",
  "author": "Mike Cao <mike@mikecao.com>",
  "homepage": "http://astrofox.io",
  "private": true,
  "scripts": {
    "run-app": "electron ./app",
    "build-win": "build --x64 --win",
    "build-mac": "build --x64 --mac",
    "lint": "eslint --ext .js,.json,.jsx src/js || exit 0"
  },
  "build": {
    "appId": "io.astrofox.astrofox",
    "productName": "Astrofox",
    "asar": true,
    "files": [
      "**/*",
      "!**/*.map",
      "!*.yml",
      "!*.lock"
    ],
    "extraResources": [
      {
        "from": "resources/ffmpeg/${os}/${arch}",
        "to": "bin"
      }
    ],
    "mac": {
      "category": "public.app-category.video"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "category": "AudioVideo"
    },
    "nsis": {
      "oneClick": true,
      "unicode": false
    },
    "squirrelWindows": {
      "iconUrl": "http://astrofox.io/icon.ico"
    },
    "publish": {
      "provider": "generic",
      "url": "https://astrofox.io/download/${os}/${arch}",
      "channel": "latest"
    }
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "debug": "^2.6.1",
    "del": "^2.2.2",
    "id3js": "^1.1.3",
    "immutable": "^3.8.1",
    "mime": "^1.3.4",
    "node-rsa": "^0.4.2",
    "react": "^15.4.2",
    "react-addons-css-transition-group": "^15.4.2",
    "react-dom": "^15.4.2",
    "three": "^0.84.0",
    "tinycolor2": "^1.4.1"
  },
  "devDependencies": {
    "babel-loader": "^6.3.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-babili": "^0.0.11",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-es2015-node6": "^0.4.0",
    "babel-preset-react": "^6.23.0",
    "babili": "^0.0.11",
    "electron": "^1.4.15",
    "electron-builder": "^13.9.0",
    "electron-updater": "^1.6.4",
    "eslint": "^3.15.0",
    "eslint-plugin-react": "^6.10.0",
    "gulp": "^3.9.1",
    "gulp-clean-css": "^3.0.2",
    "gulp-glsl": "^1.1.0",
    "gulp-header": "^1.8.8",
    "gulp-iconfont": "^8.0.1",
    "gulp-if": "^2.0.2",
    "gulp-less": "^3.3.0",
    "gulp-plumber": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-sourcemaps": "^2.4.1",
    "gulp-template": "^4.0.0",
    "gulp-util": "^3.0.8",
    "webpack": "^2.2.1",
    "webpack-node-externals": "^1.5.4"
  }
}
