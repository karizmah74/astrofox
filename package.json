{
  "name": "astrofox",
  "version": "1.0.0-beta.9",
  "main": "app/main.js",
  "productName": "Astrofox",
  "description": "Astrofox",
  "author": "Mike Cao <mike@mikecao.com>",
  "homepage": "http://astrofox.io",
  "private": true,
  "scripts": {
    "start": "electron ./app",
    "dev": "webpack --watch --progress --config webpack.config.all.js",
    "build-dev": "webpack --progress --config webpack.config.all.js",
    "build-prod": "cross-env NODE_ENV=production webpack --progress --config webpack.config.all.js",
    "build-win": "electron-builder --x64 --win",
    "build-mac": "electron-builder --x64 --mac",
    "lint": "eslint --ext .js,.jsx src || exit 0",
    "lint-fix": "eslint --fix --ext .js,.jsx src || exit 0"
  },
  "build": {
    "appId": "io.astrofox.astrofox",
    "productName": "Astrofox",
    "asar": true,
    "files": [
      "**/*",
      "!**/*.map",
      "!*.yml",
      "!*.lock"
    ],
    "extraResources": [
      {
        "from": "build/resources/ffmpeg/${os}/${arch}",
        "to": "bin"
      }
    ],
    "mac": {
      "category": "public.app-category.video"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "category": "AudioVideo"
    },
    "nsis": {
      "oneClick": true
    },
    "squirrelWindows": {
      "iconUrl": "https://astrofox.io/icon.ico"
    },
    "publish": {
      "provider": "generic",
      "url": "https://astrofox.io/download",
      "channel": "latest"
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.1.5",
    "classnames": "^2.2.6",
    "debug": "^4.1.0",
    "del": "^3.0.0",
    "id3js": "^1.1.3",
    "immutable": "^3.8.2",
    "mime": "^2.3.1",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-transition-group": "^2.5.0",
    "three": "^0.98.0",
    "tinycolor2": "^1.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-minify-webpack-plugin": "^0.3.1",
    "babel-preset-minify": "^0.5.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "electron": "^3.0.10",
    "electron-builder": "^20.36.2",
    "electron-updater": "^4.0.4",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "glsl-man": "^1.1.14",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "mini-css-extract-plugin": "^0.4.5",
    "style-loader": "^0.23.1",
    "svg-sprite-loader": "^4.1.3",
    "url-loader": "^1.1.2",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2"
  }
}
